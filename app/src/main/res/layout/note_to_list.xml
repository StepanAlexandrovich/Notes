<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/note"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/noteInformation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/headLineToList"
            android:textSize="@dimen/text_size_head_line_to_list"
            android:textColor="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            tools:text="tools"/>

        <TextView
            android:id="@+id/dateToList"
            android:textSize="@dimen/text_size_date_to_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            tools:text="tools"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewDelete"
        android:layout_width="@dimen/size_image_delete"
        android:layout_height="@dimen/size_image_delete"
        android:layout_margin="@dimen/margin_image_delete"
        app:srcCompat="@drawable/delete" />
</LinearLayout>